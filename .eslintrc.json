{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "comma-dangle": 0,
        "camelcase": "off",
        "react/jsx-uses-vars": 1,
        "no-unused-vars": "warn",
        "no-undef": "off",
        "no-console": "off",
        "no-unexpected-multiline": "warn",
        "no-extra-parens": "off",
        "react/prop-types": "off",
        "react/display-name": "off",
        "react/no-direct-mutation-state": "warn"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    }
}